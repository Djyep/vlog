<h1 class="page_title">Stuff I've written </h1>

 	<div id="post_wrapper" class="skinny_wrapper">
 		<% @posts.each do |post| %>
 		<div class="post">
 			<p class="preview"><%= post.created_at.strftime('%A, %B %d') %></p>
 			<h2><a href="#"><%= link_to post.title, post %></a></h2>
 			<hr class="line">
			</div>
 		<% end %>
	</div>
 	
 	<%= will_paginate @posts %>
